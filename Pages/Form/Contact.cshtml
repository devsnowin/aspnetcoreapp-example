@page
@model ContactModel
@{
    ViewData["Title"] = "Contact Form";
}

<head>
    <link rel="stylesheet" href="~/css/form.css">
</head>

<div class="py-5 d-flex flex-column justify-content-center align-items-center">
    <form method="post" class="w-100 contact-form">
        <h1>Contact Form</h1>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="contact.name" placeholder="john doe">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" asp-for="contact.email" placeholder="name@example.com">
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control" id="message" rows="6" asp-for="contact.message"></textarea>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>